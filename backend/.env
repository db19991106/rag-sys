# FastAPI 配置
APP_NAME=RAG Backend
APP_VERSION=1.0.0
DEBUG=True
HOST=0.0.0.0
PORT=8000

# 跨域配置
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000","http://1.27.207.190:5173","http://1.27.207.190:3000","http://127.0.0.1:5173","http://127.0.0.1:3000"]

# 文件上传配置
UPLOAD_DIR=./data/docs
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=[".txt",".pdf",".docx",".md",".doc"]

# 向量数据库配置
VECTOR_DB_TYPE=faiss
VECTOR_DB_DIR=./vector_db
FAISS_INDEX_TYPE=HNSW
FAISS_DIMENSION=2560

# 嵌入模型配置 - 使用Qwen3-Embedding-4B模型（1024维）
EMBEDDING_MODEL_TYPE=sentence-transformers
EMBEDDING_MODEL_NAME=/root/autodl-tmp/rag/backend/data/models/bge-m3
EMBEDDING_BATCH_SIZE=32
EMBEDDING_DEVICE=cuda

# LLM 配置 - 使用7B模型获得更好的回答质量
LLM_PROVIDER=local
LLM_MODEL=Qwen2.5-7B-Instruct
LOCAL_LLM_MODEL_PATH=./data/models/Qwen2.5-7B-Instruct
LOCAL_LLM_DEVICE=cuda
LOCAL_LLM_LOAD_IN_8BIT=False

# OpenAI/Anthropic 配置（备用）
LLM_API_KEY=
LLM_BASE_URL=https://api.openai.com/v1
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
