# FastAPI 配置
APP_NAME=RAG Backend
APP_VERSION=1.0.0
DEBUG=True
HOST=0.0.0.0
PORT=8000

# 跨域配置
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# 文件上传配置
UPLOAD_DIR=./data/docs
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=[".txt",".pdf",".docx",".md"]

# 向量数据库配置
VECTOR_DB_TYPE=faiss
VECTOR_DB_DIR=./vector_db
FAISS_INDEX_TYPE=HNSW
FAISS_DIMENSION=768

# Milvus 配置 (如果使用 Milvus)
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_COLLECTION_NAME=rag_vectors

# 嵌入模型配置
EMBEDDING_MODEL_TYPE=sentence-transformers
EMBEDDING_MODEL_NAME=BAAI/bge-small-zh-v1.5
EMBEDDING_BATCH_SIZE=32
EMBEDDING_DEVICE=cpu

# LLM 配置
# 选项: openai, anthropic, local
LLM_PROVIDER=local

# OpenAI/Anthropic 配置
LLM_MODEL=gpt-3.5-turbo
LLM_API_KEY=your_api_key_here
LLM_BASE_URL=https://api.openai.com/v1

# 本地 LLM 配置 (当 LLM_PROVIDER=local 时使用)
LOCAL_LLM_MODEL_PATH=./data/models/Qwen/Qwen2.5-0.5B-Instruct
LOCAL_LLM_DEVICE=cpu
LOCAL_LLM_LOAD_IN_8BIT=False

# 生成参数
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log